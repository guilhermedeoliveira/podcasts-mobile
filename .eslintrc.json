{
  "parser": "babel-eslint",
  "extends": [
    "prettier",
    "airbnb"
  ],
  "env": {
    "node": true,
    "es6": true,
    "commonjs": true,
    "jest": true
  },
  "plugins": [
    "jsx-a11y",
    "react"
  ],
  "rules": {
    "comma-dangle": [
      "error",
      "never"
    ],
    "no-underscore-dangle": [
      "off"
    ],
    "no-use-before-define": [
      "off"
    ],
    "no-shadow": [
      "off"
    ],
    "max-len": [
      "error",
      120,
      {
        "ignoreComments": true,
        "ignoreTrailingComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true
      }
    ],
    "react/jsx-filename-extension": [
      "off"
    ],
    "import/prefer-default-export": [
      "off"
    ],
    "react/forbid-prop-types": [
      "off"
    ],
    "react/jsx-one-expression-per-line": [
      "off"
    ],
    "no-confusing-arrow": [
      "off"
    ],
    "arrow-parens": [
      2,
      "as-needed",
      { "requireForBlockBody": true }
    ]
  },
  "globals": {
    "__DEV__": true,
    "fetch": true,
    "navigator": true
  }
}
